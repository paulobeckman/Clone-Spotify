                <section>
                    <div class="gradient">
                        <h2>Podcasts</h2>
                    </div>
                </section>
                
            </div>
        </div>
    {% else %}
        <div class="bodySearch">
            <section>
                <h1 class= "titleCard">Melhor resultado</h1>
                <div class="backgroundResults">
                    <img src="{{playlists[0].filesrc}}" alt="">

                    <h2>{{playlists[0].name}}</h2>

                    <p>De Spotify <span>PLAYLIST</span></p>
                    <div class="button">
                        <span class="material-icons buttonCard">play_arrow</span>
                    </div>
                </div>
            </section>
            <section>
                <div class="titleCards">
                    <span>Playlist</span>
                    <span>VER TUDO</span>
                </div>

                <div class="cards search">
                    {% for playlist in playlists %}
                        <div class="card search" id="{{playlist.id}}">
                                <div class="contentCardImg">
                                    {% if not playlist.filesrc %}
                                        <div class="icon"><i class="fa fa-music"></i></div>
                                    {% else %}
                                        <img src="{{playlist.filesrc}}" alt="Imagem da Playlist">  
                                    {%endif%}
                                    <span class="material-icons buttonCard">play_arrow</span>
                                </div>
                            <div class="gridCard">                            
                                <h1>{{playlist.name}}</h1>
                                {% if not playlist.description %}
                                    <p>de paulo beckman</p>
                                {% else %}
                                    <p>{{playlist.description}}</p>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor%}
                </div>
            </section>
        </div>

        <div class="titleCards">
            <span>Playlist</span>
            <span>VER TUDO</span>
        </div>

        <div class="cards allPLaylist">
            {% for playlist in playlists %}
                <div class="card" id="{{playlist.id}}">
                        <div class="contentCardImg">
                            {% if not playlist.filesrc %}
                                <div class="icon"><i class="fa fa-music"></i></div>
                            {% else %}
                                <img src="{{playlist.filesrc}}" alt="Imagem da Playlist">  
                            {%endif%}
                            <span class="material-icons buttonCard">play_arrow</span>
                        </div>
                    <h1>{{playlist.name}}</h1>
                    {% if not playlist.description %}
                        <p>de paulo beckman</p>
                    {% else %}
                        <p>{{playlist.description}}</p>
                    {% endif %}
                </div>
            {% endfor%}
        </div>
    {%endif%}


