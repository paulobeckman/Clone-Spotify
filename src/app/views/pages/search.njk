                <section>
                    <div class="gradient">
                        <h2>Dance / Electronic</h2>
                    </div>
                </section>
                <section>
                    <div class="gradient">
                        <h2>Pop</h2>
                    </div>
                </section>
            </div>

            <h1>Navegar por todas as seções</h1>
            <div class="sections">
                <section>
                    <div class="gradient">
                        <h2>Podcasts</h2>
                    </div>
                </section>

                <section >
                    <div class="gradient">
                        <h2>Podcasts</h2>
                    </div>
